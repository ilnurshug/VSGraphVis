            <ComboBoxItem Name="a">Fruchterman-Reingold</ComboBoxItem>
            <ComboBoxItem Name="b">Radial</ComboBoxItem>
            <ComboBoxItem Name="c">RightHeavy</ComboBoxItem>
        </ComboBox>-->
        <Canvas x:Name="front_canvas" Width="600" Height="510" VerticalAlignment="Center" HorizontalAlignment="Center"/>
